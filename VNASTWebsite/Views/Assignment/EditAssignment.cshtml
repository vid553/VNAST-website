@model VNASTWebsite.Models.Assignment

@{
    ViewBag.Title = "EditAssignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditAssignment</h2>

<div>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.Hidden("_id", Model._id)
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.priority, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.priority, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.priority, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.status, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.status, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.status, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.created_date, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Convert.ToDateTime(Model.created_date).ToString("dd/MM/yyyy HH:mm:ss")
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.name, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
