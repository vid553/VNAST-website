@model VNASTWebsite.Models.Assignment

@{
    ViewBag.Title = "Add Assignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Assignment</h2>
<div>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.priority, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.priority, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.status, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.status, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.name, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.description, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.description, new { @class = "form-control" })
                </div>
            </div>
            <br/>
                <div class="form-group">
                    <div class="col-md-offset-2">
                        <input type="submit" class="btn btn-default" value="Save" />
                    </div>
                </div>
                }
            </div>
        </div>

            <div>
                @Html.ActionLink("Back to List", "Assignments")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
