
@{
    /**/

    ViewBag.Title = "Assignments";
}

<h2>All Tasks</h2>

@if (Model != null)
{
    <div class="table-responsive">
        <table align="center" class="table  table-striped table-hover">
            <thead>
                <tr>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Created date</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.priority</td>
                        <td>@item.status[0]</td>
                        <td>@Convert.ToDateTime(item.created_date).ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@item._id</td>
                        <td>@item.name</td>
                        <td>@item.description</td>

                        <td>@Html.ActionLink("Edit", "EditAssignment", new { id = item._id })</td>
                        <td>@Html.ActionLink("Delete", "DeleteAssignment", new { id = item._id })</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <button onclick="location.href = 'AddAssignment'" type="button" class="btn btn-primary"> Create new Task </button>
}


