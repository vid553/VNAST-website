@{
    ViewBag.Title = "Chats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    if (Model.privilege[0] != "worker")
    {
        <h3 class="text-success">All Chats</h3>
        <table align="center" class="table table-striped">
            <thead>
                <tr class="info">
                    <th>Participants</th>
                    <th>Created date</th>
                    <th>Chat ID</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.all_chats)
                {
                    <tr>
                        <td>
                            @for (int i = 0; i < item.participants.Count; i++)
                            {
                                <div>@item.participants[i]</div>
                            }
                        </td>
                        <td>@Convert.ToDateTime(item.created_date).ToString("dd/MM/yyyy hh:mm:ss")</td>
                        <td>@item._id</td>
                        <td>@Html.ActionLink("Open Chat", "ShowChat", new { id = item._id })</td>
                        <td>@Html.ActionLink("Delete", "DeleteChat", new { id = item._id })</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2 class="text-success">My Chats</h2>

        <table align="center" class="table table-striped">
            <thead>
                <tr class="info">
                    <th>Participants</th>
                    <th>Created date</th>
                    <th>Chat ID</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.my_chats)
                {
                    <tr>
                        <td>
                            @for (int i = 0; i < item.participants.Count; i++)
                            {
                                <div>@item.participants[i]</div>
                            }
                        </td>
                        <td>@Convert.ToDateTime(item.created_date).ToString("dd/MM/yyyy hh:mm:ss")</td>
                        <td>@item._id</td>
                        <td>@Html.ActionLink("Open Chat", "ShowChat", new { id = item._id })</td>
                        <td>@Html.ActionLink("Delete", "DeleteChat", new { id = item._id })</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}