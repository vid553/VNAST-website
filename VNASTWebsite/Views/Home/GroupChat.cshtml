
@{
    ViewBag.Title = "GroupChat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <h3 class="text-success">Group Chats</h3>
    <table align="center" class="table table-striped">
        <thead>
            <tr class="info">
                <th>Participants</th>
                <th>Created date</th>
                <th>Chat ID</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.List)
            {
                <tr>
                    <td>
                        @for (int i = 0; i < item.participants.Count; i++)
                        {
                            <div>@item.participants[i]</div>
                        }
                    </td>
                    <td>@Convert.ToDateTime(item.created_date).ToString("dd/MM/yyyy hh:mm:ss")</td>
                    <td>@item._id</td>
                    <td>@Html.ActionLink("Open Chat", "ShowGroupChat", new { id = item.assigned_to_group, id2 = item._id })</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h2>:( </h2>
        <h4>This group does not have any group chats...</h4>
    </div>
}